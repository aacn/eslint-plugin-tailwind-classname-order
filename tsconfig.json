{
  "compilerOptions": {
    "target": "es2015",
    "module": "commonjs",
    "jsx": "react",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "./lib",
    "rootDir": "./src",
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "baseUrl": "./src",
    "paths": {
      "@/*": ["*"]
    },
  },
  "tsc-alias": {
    "verbose": false,
    "resolveFullPaths": true,
  },
  "include": ["src/**/*","src/rules/orderConfig.json"],
  "exclude": ["src/rules/*.test.ts", "playground"]
}
